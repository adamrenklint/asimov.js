@import "asimovColors.styl"
@import url("http://fonts.googleapis.com/css?family=Signika:300,400,600,700")
@import url("http://fonts.googleapis.com/css?family=Open+Sans:300,400,700")
@import url("http://fonts.googleapis.com/css?family=Source+Code+Pro");

*
  margin: 0
  padding: 0

body
  text-align: center
  background-color: $lighter
  font-family: 'Open Sans', sans-serif
  color: $dark
  font-size: 16px
  line-height: @font-size + 120%
  margin: 0 auto

a
  color: $dark
  text-decoration: none
  font-weight: 600

  &:hover
    color: $darker

p
  margin-bottom: 20px
  font-weight: 300

h1
  font-family: "Signika", "Helvetica Neue", "Helvetica", "Arial", sans-serif
  font-size 60px
  font-weight 300
  color $accent

  .name
    font-weight: 700

.button
  border-radius: 100px
  background-color: $accent
  display: inline-block
  font-size: 1.3em
  font-weight: 700
  color: white
  padding: 10px 25px
  cursor: pointer

  &:hover
    color: white
    background-color: lighten($accent,20%)

  &.outline
    background-color: transparent
    box-shadow: inset 0 0 0 2px $accent
    color: $accent

    &:hover
      color: white
      background-color: $accent

.footer
  font-size: 1em
  position: fixed
  bottom: 20px
  left: 0
  right: 0